@page
@model Clinica.Pages.Visitas.IndexModel
@{
    ViewData["Title"] = "Visitas";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold text-dark">Visitas Registradas</h2>

        <div class="d-flex gap-2">
            <a href="/Visitas/Create" class="btn btn-primary rounded-pill shadow-sm">
                <i class="fas fa-plus me-2"></i> Registrar Visita
            </a>
            <a href="/Visitas/Administrar" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="fas fa-wrench me-2"></i> Editar o Eliminar
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var visita in Model.ListaVisitas)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">@visita.Paciente?.Nombre</h5>
                        <p class="card-text">
                            <strong>Fecha:</strong> @visita.Fecha.ToShortDateString()<br />
                            <strong>Hora:</strong> @visita.Hora.ToString(@"hh\:mm")<br />
                            <strong>Duraci√≥n:</strong> @visita.Duracion minutos<br />
                            <strong>Terapeuta:</strong> @visita.Terapeuta?.Nombre<br />
                            <strong>Tratamiento:</strong> @visita.Tratamiento?.Nombre<br />
                            <strong>Notas:</strong> @visita.Notas
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
