@page "{id:int}"
@model Clinica.Pages.Medicos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Médico";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3 text-danger">¿Deseas eliminar este médico?</h2>

    <div class="card border-danger mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Medico.Nombre</h5>
            <p class="card-text">
                <strong>Especialidad:</strong> @Model.Medico.Especialidad<br />
                <strong>Teléfono:</strong> @Model.Medico.Telefono<br />
                <strong>Email:</strong> @Model.Medico.Email
            </p>
            <form method="post">
                <button type="submit" class="btn btn-danger rounded-pill">Sí, eliminar</button>
                <a href="/Medicos" class="btn btn-secondary ms-2 rounded-pill">Cancelar</a>
            </form>
        </div>
    </div>
</div>
