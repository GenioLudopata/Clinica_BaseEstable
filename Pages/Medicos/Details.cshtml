@page "{id:int}"
@model Clinica.Pages.Medicos.DetailsModel
@{
    ViewData["Title"] = "Detalle del Médico";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3">Detalle del Médico</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Medico.Nombre</h5>
            <p class="card-text">
                <strong>Especialidad:</strong> @Model.Medico.Especialidad<br />
                <strong>Teléfono:</strong> @Model.Medico.Telefono<br />
                <strong>Email:</strong> @Model.Medico.Email
            </p>
            <a href="/Medicos" class="btn btn-secondary rounded-pill">Regresar</a>
        </div>
    </div>
</div>
