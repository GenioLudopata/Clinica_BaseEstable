@page
@model Clinica.Pages.Medicos.AdministrarModel
@{
    ViewData["Title"] = "Administrar Médicos";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <h2 class="fw-semibold text-dark mb-4">Administrar Médicos</h2>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Especialidad</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var medico in Model.ListaMedicos)
        {
            <tr>
                <td>@medico.Nombre</td>
                <td>@medico.Especialidad</td>
                <td>@medico.Telefono</td>
                <td>@medico.Email</td>
                <td class="text-center">
                    <a href="/Medicos/Edit/@medico.Id" class="btn btn-sm btn-warning rounded-pill me-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/Medicos/Delete/@medico.Id" class="btn btn-sm btn-danger rounded-pill">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
