@page
@model Clinica.Pages.Medicos.IndexModel
@{
    ViewData["Title"] = "Médicos Registrados";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold text-dark">Médicos Registrados</h2>

        <div class="d-flex gap-2">
            <a href="/Medicos/Create" class="btn btn-primary rounded-pill shadow-sm">
                <i class="fas fa-user-md me-2"></i> Registrar Médico
            </a>
            <a href="/Medicos/Administrar" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="fas fa-wrench me-2"></i> Editar o Eliminar
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var medico in Model.ListaMedicos)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card custom-card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@medico.Nombre</h5>
                        <p><strong>Especialidad:</strong> @medico.Especialidad</p>
                        <p><strong>Teléfono:</strong> @medico.Telefono</p>
                        <p><strong>Email:</strong> @medico.Email</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
