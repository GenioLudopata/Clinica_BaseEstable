@page
@model Clinica.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: #f7f9fc;">
    <div class="card shadow p-5" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h3 class="text-center mb-4">Iniciar Sesión</h3>

        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert alert-danger">@Model.Mensaje</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Usuario</label>
                <input type="text" class="form-control" name="Usuario" required />
            </div>
            <div class="mb-4">
                <label class="form-label fw-semibold">Contraseña</label>
                <input type="password" class="form-control" name="Contrasena" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
    </div>
</div>