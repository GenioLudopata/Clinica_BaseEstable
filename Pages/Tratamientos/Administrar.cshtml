@page
@model Clinica.Pages.Tratamientos.AdministrarModel
@{
    ViewData["Title"] = "Administrar Tratamientos";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <h2 class="fw-semibold text-dark mb-4">Administrar Tratamientos</h2>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Descripci√≥n</th>
                <th>Costo</th>
                <th>Equipo</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var tratamiento in Model.ListaTratamientos)
        {
            <tr>
                <td>@tratamiento.Nombre</td>
                <td>@tratamiento.Tipo</td>
                <td>@tratamiento.Descripcion</td>
                <td>$@tratamiento.Costo</td>
                <td>@tratamiento.Equipo?.Nombre</td>
                <td class="text-center">
                    <a href="/Tratamientos/Edit/@tratamiento.Id" class="btn btn-sm btn-warning rounded-pill me-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/Tratamientos/Delete/@tratamiento.Id" class="btn btn-sm btn-danger rounded-pill">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
