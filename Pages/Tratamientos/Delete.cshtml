@page "{id:int}"
@model Clinica.Pages.Tratamientos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Tratamiento";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3 text-danger">¿Deseas eliminar este tratamiento?</h2>
    <div class="card border-danger mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Tratamiento.Nombre</h5>
            <p class="card-text">
                <strong>Tipo:</strong> @Model.Tratamiento.Tipo<br />
                <strong>Descripción:</strong> @Model.Tratamiento.Descripcion<br />
                <strong>Costo:</strong> $@Model.Tratamiento.Costo
            </p>
            <form method="post">
                <button type="submit" class="btn btn-danger rounded-pill">Sí, eliminar</button>
                <a href="/Tratamientos" class="btn btn-secondary ms-2 rounded-pill">Cancelar</a>
            </form>
        </div>
    </div>
</div>