@page "{id:int}"
@model Clinica.Pages.Terapeutas.DetailsModel
@{
    ViewData["Title"] = "Detalle del Terapeuta";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3">Detalle del Terapeuta</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Terapeuta.Nombre</h5>
            <p class="card-text">
                <strong>Honorarios:</strong> $@Model.Terapeuta.Honorarios<br />
                <strong>Tel√©fono:</strong> @Model.Terapeuta.Telefono<br />
                <strong>Email:</strong> @Model.Terapeuta.Email<br />
                <strong>Licencia:</strong> @Model.Terapeuta.Licencia
            </p>
            <a href="/Terapeutas" class="btn btn-secondary rounded-pill">Regresar</a>
        </div>
    </div>
</div>
