@page "{id:int}"
@model Clinica.Pages.Terapeutas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Terapeuta";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3 text-danger">¿Deseas eliminar este terapeuta?</h2>

    <div class="card border-danger mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Terapeuta.Nombre</h5>
            <p class="card-text">
                <strong>Teléfono:</strong> @Model.Terapeuta.Telefono<br />
                <strong>Email:</strong> @Model.Terapeuta.Email<br />
                <strong>Licencia:</strong> @Model.Terapeuta.Licencia<br />
                <strong>Honorarios:</strong> $@Model.Terapeuta.Honorarios
            </p>

            <form method="post">
                <button type="submit" class="btn btn-danger rounded-pill">Sí, eliminar</button>
                <a href="/Terapeutas" class="btn btn-secondary ms-2 rounded-pill">Cancelar</a>
            </form>
        </div>
    </div>
</div>
