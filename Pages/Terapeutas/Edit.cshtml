@page "{id:int}"
@model Clinica.Pages.Terapeutas.EditModel
@{
    ViewData["Title"] = "Editar Terapeuta";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3">Editar Terapeuta</h2>

    <form method="post">
        <input type="hidden" asp-for="TerapeutaEditado.Id" />

        <div class="mb-3">
            <label asp-for="TerapeutaEditado.Nombre" class="form-label"></label>
            <input asp-for="TerapeutaEditado.Nombre" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TerapeutaEditado.Telefono" class="form-label"></label>
            <input asp-for="TerapeutaEditado.Telefono" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TerapeutaEditado.Email" class="form-label"></label>
            <input asp-for="TerapeutaEditado.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TerapeutaEditado.Licencia" class="form-label"></label>
            <input asp-for="TerapeutaEditado.Licencia" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TerapeutaEditado.Honorarios" class="form-label"></label>
            <input asp-for="TerapeutaEditado.Honorarios" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary rounded-pill">Guardar Cambios</button>
        <a href="/Terapeutas" class="btn btn-secondary ms-2 rounded-pill">Cancelar</a>
    </form>
</div>