@page "{id:int}"
@model Clinica.Pages.Pacientes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2 class="mb-3 text-danger">¿Deseas eliminar este paciente?</h2>

    <div class="card border-danger mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Paciente.Nombre</h5>
            <p class="card-text">
                <strong>Fecha de nacimiento:</strong> @Model.Paciente.FechaNacimiento.ToShortDateString()<br />
                <strong>Dirección:</strong> @Model.Paciente.Direccion<br />
                <strong>Teléfono:</strong> @Model.Paciente.Telefono
            </p>

            <form method="post">
                <button type="submit" class="btn btn-danger rounded-pill">Sí, eliminar</button>
                <a href="/Pacientes" class="btn btn-secondary ms-2 rounded-pill">Cancelar</a>
            </form>
        </div>
    </div>
</div>
