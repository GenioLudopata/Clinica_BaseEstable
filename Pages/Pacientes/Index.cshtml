@page
@model Clinica.Pages.Pacientes.IndexModel
@{
    ViewData["Title"] = "Pacientes";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold text-dark">Pacientes Registrados</h2>
        <div class="d-flex gap-2">
             <a href="/Pacientes/Create" class="btn btn-primary rounded-pill shadow-sm">
                <i class="fas fa-user-md me-2"></i> Registrar Paciente
             </a>
             <a href="/Pacientes/Administrar" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="fas fa-wrench me-2"></i> Editar o Eliminar
             </a>
        </div>
    </div>

    <div class="row">
        @foreach (var paciente in Model.ListaPacientes)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">@paciente.Nombre</h5>
                        <p class="card-text">
                            <strong>Fecha de nacimiento:</strong> @paciente.FechaNacimiento.ToShortDateString()<br />
                            <strong>Dirección:</strong> @paciente.Direccion<br />
                            <strong>Teléfono:</strong> @paciente.Telefono
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
