@page
@model Clinica.Pages.Recetas.IndexModel
@{
    ViewData["Title"] = "Recetas";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold text-dark">Recetas Registradas</h2>
        <div class="d-flex gap-2">
             <a href="/Recetas/Create" class="btn btn-primary rounded-pill shadow-sm">
                <i class="fas fa-user-md me-2"></i> Registrar Receta
             </a>
             <a href="/Recetas/Administrar" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="fas fa-wrench me-2"></i> Editar o Eliminar
             </a>
        </div>
    </div>
    
    <div class="row">
        @foreach (var receta in Model.ListaRecetas)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">Receta ID: @receta.Id</h5>
                        <p class="card-text">
                            <strong>Fecha:</strong> @receta.Fecha.ToShortDateString()<br />
                            <strong>Diagnóstico:</strong> @receta.Descripcion<br />
                            <strong>Paciente:</strong> @receta.Paciente?.Nombre<br />
                            <strong>Médico:</strong> @receta.Medico?.Nombre
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


