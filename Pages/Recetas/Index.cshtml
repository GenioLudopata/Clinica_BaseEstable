@page
@model Clinica.Pages.Recetas.IndexModel
@{
    ViewData["Title"] = "Recetas";
}

<div class="container mt-4">
    <h2 class="mb-4 animate__animated animate__fadeInDown">Recetas</h2>
    <a href="/Recetas/Create" class="btn btn-primary mb-3 shadow rounded-pill animate__animated animate__fadeInLeft">Registrar Receta</a>

    <div class="row">
        @foreach (var receta in Model.ListaRecetas)
        {
            <div class="col-md-6 col-lg-4 mb-4 animate__animated animate__fadeInUp">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@receta.Medicamento</h5>
                        <p class="card-text">
                            <strong>Fecha:</strong> @receta.Fecha.ToShortDateString()<br />
                            <strong>Duración:</strong> @receta.DuracionDias días<br />
                            <strong>Descripción:</strong> @receta.Descripcion
                        </p>
                        <div class="d-flex justify-content-between">
                            <a href="/Recetas/Details/@receta.Id" class="btn btn-info btn-sm text-white rounded-pill">Ver</a>
                            <a href="/Recetas/Edit/@receta.Id" class="btn btn-warning btn-sm text-dark rounded-pill">Editar</a>
                            <a href="/Recetas/Delete/@receta.Id" class="btn btn-danger btn-sm text-white rounded-pill">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


